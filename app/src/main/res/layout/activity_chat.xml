<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defalut">
    <include
        android:id="@+id/title_bar"
        layout="@layout/title_bar"/>
    <ListView
        android:id="@+id/chat_listview"
        android:background="@color/defalut"
        android:transcriptMode="normal"
        android:layout_above="@+id/et_chat_send"
        android:layout_below="@+id/title_bar"
        android:listSelector="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:id="@+id/et_chat_send"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"
        android:focusableInTouchMode="true">
        <ImageView
            android:id="@+id/btn_audio"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/ic_audio"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/btn_chat_send"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_selector_titlecolor_light"
            android:layout_margin="5dp"
            android:text="发送"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"/>
        <EditText
            android:id="@+id/et_chat_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="2dp"
            android:layout_toRightOf="@+id/btn_audio"
            android:layout_toLeftOf="@+id/btn_chat_send"/>
        <View
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>
</RelativeLayout>